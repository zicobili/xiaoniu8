                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/sp14_black"
                                android:gravity="center_vertical"
                                android:drawableLeft="@mipmap/icon_abuotstore"
                                android:text="关于本店"/>

                        </RelativeLayout>
                        <View android:layout_marginTop="@dimen/dimen_20_dip" style="@style/xdiv"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_20_dip"
                            style="@style/sp14_gray"
                            android:text="本店在大润发超市一楼，摩奥专柜，如果你有理想，有目标，都可以加入我们公司，跟着公司发展起来，公司很爱惜人才，免费培训，到了一定成绩还有公司旅游及年会。"/>



