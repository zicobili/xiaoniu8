                                android:text="家乡：江苏 南通"
                                android:drawableLeft="@mipmap/icon_hometowntag"
                                android:background="@drawable/signin_editview_backgroud"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!--工作地址-->
                    <LinearLayout
                        style="@style/tab_bg_default"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/sp14_black"
                                android:gravity="center_vertical"
                                android:drawableLeft="@mipmap/icon_joblocation"
                                android:text="工作地址"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="center"
                                android:background="@drawable/btn_shape_circular_orange">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/sp12_white"
                                    android:padding="@dimen/dimen_5_dip"
                                    android:gravity="center_vertical"
                                    android:text="中山.距我0.0米"
                                    android:drawableRight="@mipmap/icon_location_btn_jd"/>
                            </LinearLayout>
                        </RelativeLayout>
                        <View android:layout_marginTop="@dimen/dimen_30_dip" style="@style/xdiv"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_30_dip"
                            style="@style/sp14_gray"
                            android:text="府城中山南路凤翔横街32号"/>



                    </LinearLayout>
                    <!--职位描述-->
