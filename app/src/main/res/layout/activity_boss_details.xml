                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_30_dip"
                            android:layout_marginBottom="@dimen/dimen_30_dip"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/sp16_black"
                                android:paddingTop="@dimen/dimen_2_dip"
                                android:paddingBottom="@dimen/dimen_2_dip"
                                android:paddingLeft="@dimen/dimen_10_dip"
                                android:paddingRight="@dimen/dimen_20_dip"
