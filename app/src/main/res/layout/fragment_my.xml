<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/systemBackground"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/contact_tab_bc_white"
        android:layout_height="@dimen/dimen_300_dip">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200_dip"
            android:scaleType="fitXY"
            android:src="@mipmap/image_f3_background2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_general_settings"/>
            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200_dip"
            android:layout_marginTop="@dimen/dimen_50_dip"
            android:layout_marginLeft="@dimen/dimen_20_dip"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dimen_150_dip"
                android:layout_height="@dimen/dimen_150_dip"
                android:src="@mipmap/default150_c"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/sp16_white"
                            android:text="肖霞"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@mipmap/icon_editpersonage_btn"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/sp14_gray"
                        android:layout_marginTop="@dimen/dimen_80_dip"
                        android:text="女/23岁/1年工作经验11"/>
                </LinearLayout>

        </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/contact_tab_bc_white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100_dip"
            android:layout_marginTop="@dimen/dimen_48_dip"
            android:layout_marginBottom="@dimen/dimen_20_dip"
            android:layout_marginLeft="@dimen/dimen_30_dip"
            android:layout_marginRight="@dimen/dimen_30_dip"
            android:padding="@dimen/dimen_10_dip"
            android:orientation="vertical"
            android:background="@drawable/my_jifen_bc">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/sp14_red"
                    android:text="资料完善40%"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/sp14_black"
                    android:gravity="right"
                    android:text="完善80%可获得黄金头像"/>
            </LinearLayout>
            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48_dip"
                android:background="#cccccc"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen_48_dip"
        android:paddingBottom="@dimen/dimen_48_dip"
        android:background="@color/contact_tab_bc_white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/sp14_red"
                android:text="1"
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/sp14_gray"
                android:text="收藏的店长"
                android:gravity="center_horizontal"/>


        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/div"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/sp14_red"
                android:text="2"
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/sp14_gray"
                android:text="收藏的工作"
                android:gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

    </RelativeLayout>
</LinearLayout>
